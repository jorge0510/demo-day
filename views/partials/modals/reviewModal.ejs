
<div id="reviewsModalBackdrop" class="hidden fixed inset-0 bg-black/40 z-40"></div>


<div id="reviewsModal" class="hidden fixed inset-0 z-50 flex items-center justify-center">
<div class="bg-white rounded-lg w-full max-w-xl shadow-lg p-6 relative flex flex-col max-h-[80vh] overflow-hidden">
  
  <button id="closeReviewsModal" class="absolute top-3 right-4 text-gray-400 hover:text-black text-xl">&times;</button>
  
  <h2 class="text-lg font-semibold mb-4 text-center">Customer Reviews</h2>

  
  <div id="reviewsContainer" class="flex flex-col gap-4 overflow-y-auto pr-1 mb-4 max-h-[40vh]"></div>

  <!-- New Review Form -->
  <form id="reviewForm" class="flex flex-col gap-3 pt-4">
    <input
      type="text"
      id="reviewUser"
      placeholder="Your name"
      class="border border-gray-200 rounded px-3 py-2 text-sm"
      required
    />

    <textarea
      id="reviewComment"
      placeholder="Your review"
      rows="3"
      class="border border-gray-200 rounded px-3 py-2 text-sm resize-none"
      required
    ></textarea>

    <select
      id="reviewRating"
      class="border border-gray-200 rounded px-3 py-2 text-sm"
      required
    >
      <option value="">Rating</option>
      <option value="5">5 - Excellent</option>
      <option value="4">4 - Good</option>
      <option value="3">3 - Okay</option>
      <option value="2">2 - Bad</option>
      <option value="1">1 - Terrible</option>
    </select>

    <button type="submit" class="bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-2 rounded text-sm">
      Submit Review
    </button>
  </form>
</div>
</div>