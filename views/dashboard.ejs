<!-- views/partials/header.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Vozmia | FAQ Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-50 text-gray-800">
  <header class="bg-white border-b border-gray-300 shadow-sm">
    <div class="max-w-6xl mx-auto px-4 py-4 flex justify-between items-center">
      <a href="/" class="text-xl font-bold text-yellow-500">Vozmia</a>
      <nav class="space-x-4 text-sm">
        <a href="/dashboard" class="text-gray-600 hover:text-black">Dashboard</a>
        <a href="/logout" class="text-gray-600 hover:text-black">Logout</a>
      </nav>
    </div>
  </header>
  
  <div class="max-w-4xl mx-auto mt-10 p-6 bg-white rounded-lg shadow border border-gray-300">
    <h1 class="text-2xl font-semibold mb-6 text-yellow-500">Business FAQ Dashboard</h1>
  
    <% if (business) { %>
      <div class="mb-6">
        <h2 class="text-xl font-semibold text-gray-800 mb-2">Business: <%= business.name %></h2>
        <p class="text-sm text-gray-500">Claimed by: <%= business.claimedBy?.email || 'Unclaimed' %></p>
      </div>
  
      <% if (user && business.claimedBy && user.email === business.claimedBy.email) { %>
  
        <div class="space-y-6">
          <% faqs.forEach(faq => { %>
            <div class="border border-gray-200 p-4 rounded">
              <p class="text-sm text-gray-800 font-medium">❓ <%= faq.question %></p>
              <p class="text-xs text-gray-400 mb-2">Asked by: <%= faq.email || 'Guest' %> on <%= faq.createdAt.toLocaleDateString() %></p>
  
              <% if (faq.reply) { %>
                <div class="bg-gray-100 text-sm text-gray-700 p-3 rounded">
                  <strong>✅ Answer:</strong> <%= faq.reply %>
                  <p class="text-xs text-gray-400 mt-1">Replied at: <%= faq.repliedAt?.toLocaleDateString() %></p>
                </div>
              <% } else { %>
                <form action="/api/businesses/<%= business._id %>/faqs/<%= faq._id %>/reply" method="POST" class="mt-3">
                  <textarea name="reply" class="w-full border border-gray-300 rounded p-2 text-sm" rows="3" placeholder="Write your reply here..." required></textarea>
                  <button type="submit" class="mt-2 px-4 py-1 bg-yellow-500 text-white text-sm rounded hover:bg-yellow-600">
                    Reply
                  </button>
                </form>
              <% } %>
            </div>
          <% }) %>
        </div>
  
      <% } else { %>
        <p class="text-sm text-red-500 font-medium">You are not authorized to reply to these FAQs.</p>
      <% } %>
  
    <% } else { %>
      <p class="text-gray-500">Business not found.</p>
    <% } %>
  </div>

  <footer class="mt-12 text-center text-sm text-gray-400 py-4 border-t border-gray-300">
    &copy; <%= new Date().getFullYear() %> Vozmia. All rights reserved.
  </footer>
</body>
</html>
