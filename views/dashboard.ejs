<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Vozmia | FAQ Dashboard</title>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

  <link href="/css/styles.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/main.css">
  
  <link href="https://fonts.googleapis.com/css2?family=Kdam+Thmor+Pro&display=swap" rel="stylesheet">
</head>
<body class="bg-gray-50 text-gray-800">
  <%- include('partials/modals/addBusinessModal') %>
  <%- include('partials/header') %>

  <div class="max-w-5xl mx-auto mt-10 p-6 bg-white rounded-lg shadow border border-gray-300">
    <div class="flex items-center justify-between mb-6">
      <h1 class="text-2xl font-semibold text-yellow-500">Your Business FAQ Dashboard</h1>
      <a id="openAddBusinessModalBtn" href="#" class="inline-flex items-center gap-2 bg-yellow-500 hover:bg-yellow-600 text-white text-sm font-medium px-4 py-2 rounded shadow">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        Add Business
      </a>
    </div>
    <% if (businesses.length === 0) { %>
      <p class="text-gray-500">You haven't claimed any businesses yet.</p>
    <% } else { %>
      <!-- Business Selector -->
      <form action="/dashboard" method="GET" class="mb-6">
        <label for="businessId" class="block mb-2 text-sm font-medium text-gray-700">Select a Business</label>
        <select name="businessId" id="businessId" class="border border-gray-300 rounded px-3 py-2 text-sm w-full max-w-xs" onchange="this.form.submit()">
          <% businesses.forEach(b => { %>
            <option value="<%= b._id %>" <%= String(b._id) === String(selectedBusiness?._id) ? 'selected' : '' %>>
              <%= b.name %>
            </option>
          <% }) %>
        </select>
      </form>

      <% if (selectedBusiness) { %>
        <div class="mb-10 border-b border-gray-300 pb-6">
          <h2 class="text-xl font-semibold text-gray-800 mb-1">Business: <%= selectedBusiness.name %></h2>
          <p class="text-sm text-gray-500">Claimed by: <%= selectedBusiness.claimedBy?.email || 'Unclaimed' %></p>

          <% if (!selectedBusiness.featured) { %>
            <form action="/api/businesses/<%= selectedBusiness._id %>/feature" method="POST" class="inline-block mt-1 mb-5">
              <button type="submit" class="text-xs text-blue-500 hover:underline" onclick="return confirm('Are you sure you want to feature <%= selectedBusiness.name %>?');">
                Feature <%= selectedBusiness.name %>
              </button>
            </form>
          <% } %>
          <div class="space-y-6">
            <% selectedBusiness.faqs.forEach(faq => { %>
              <div class="border border-gray-200 p-4 rounded">
                <p class="text-sm text-gray-800 font-medium">❓ <%= faq.question %></p>
                <p class="text-xs text-gray-400 mb-2">Asked by: <%= faq.email || 'Guest' %> on <%= new Date(faq.createdAt).toLocaleDateString() %></p>

                <form action="/api/businesses/<%= selectedBusiness._id %>/faqs/<%= faq._id %>/hide" method="POST" class="inline-block mt-1">
                  <button type="submit" class="text-xs text-red-500 hover:underline" onclick="return confirm('Are you sure you want to ignore this question?');">
                    Ignore
                  </button>
                </form>

                <% if (faq.reply) { %>
                  <div class="bg-gray-100 text-sm text-gray-700 p-3 rounded mt-2">
                    <strong>✅ Answer:</strong> <%= faq.reply %>
                    <p class="text-xs text-gray-400 mt-1">Replied at: <%= new Date(faq.repliedAt).toLocaleDateString() %></p>
                  </div>
                <% } else { %>
                  <form action="/api/businesses/<%= selectedBusiness._id %>/faqs/<%= faq._id %>/reply" method="POST" class="mt-3">
                    <textarea name="reply" class="w-full border border-gray-300 rounded p-2 text-sm" rows="3" placeholder="Write your reply here..." required></textarea>
                    <button type="submit" class="mt-2 px-4 py-1 bg-yellow-500 text-white text-sm rounded hover:bg-yellow-600">
                      Reply
                    </button>
                  </form>
                <% } %>
              </div>
            <% }) %>
          </div>
        </div>
      <% } %>
    <% } %>
  </div>

  <%- include('partials/footer') %>
  <script type="module" src="/js/addBusinessModal.js"></script>
  <script type="module" src="/js/dropdown.js"></script>
</body>
</html>