<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>VozmIA | Business Directory</title>
  
  

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

  <link href="/css/styles.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/main.css">
  
  <link href="https://fonts.googleapis.com/css2?family=Kdam+Thmor+Pro&display=swap" rel="stylesheet">
</head>



<body class="bg-white min-h-screen flex flex-col justify-between relative overflow-hidden">
  <%- include('../partials/reviewModal') %>
  <%- include('../partials/authModal') %>
  <%- include('../partials/claimBusinessModal') %>

  <!-- Background Layer -->
  <div class="absolute inset-0 z-0">
    <div class="absolute inset-0 bg-gradient-to-r from-yellow-50 via-yellow-100 to-yellow-50 opacity-70"></div>
    <div class="absolute top-0 left-0 w-full h-full overflow-hidden">
      <div class="absolute -top-4 -left-4 w-24 h-24 rounded-full bg-yellow-300 opacity-20"></div>
      <div class="absolute top-1/2 right-10 w-32 h-32 rounded-full bg-yellow-400 opacity-10"></div>
      <div class="absolute bottom-0 left-1/3 w-40 h-40 rounded-full bg-yellow-200 opacity-20"></div>
    </div>
  </div>

  <!-- Main Content -->
  <main class="min-h-screen flex flex-col relative z-10">
    <div class="flex flex-col min-h-screen">
      
      <%- include('partials/header') %>

      <% if ((results && results.length > 0) || Object.keys(filterBy).length !== 0 ) { %>
        <%- include('partials/mainSearchAndResults') %>
      <% } else { %>
        <%- include('partials/mainSearch') %>
      <% } %>

      <%- include('partials/footer') %>      
    </div>
  </main>

  <script type="module" src="/js/claimBusinessModal.js"></script>
  <script type="module" src="/js/authModal.js"></script>
  <script type="module" src="/js/reviewModal.js"></script>
  <script type="module" src="/js/dropdown.js"></script>
  <script type="module" src="/js/mainSearchTabs.js"></script>
  <script type="module" src="/js/chat.js"></script>

</body>

</html>