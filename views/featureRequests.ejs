<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <title>Feature Requests</title> 

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

  <link href="/css/styles.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/main.css">
  
  <link href="https://fonts.googleapis.com/css2?family=Kdam+Thmor+Pro&display=swap" rel="stylesheet">
</head>
<body class="bg-gray-100 text-gray-700">
  <!-- Header -->
  <%- include('partials/header') %>

  <!-- Timeline & Form Section -->
  <main class="max-w-3xl mx-auto mt-10 px-4">
    <!-- Feature Timeline -->
    <section class="mb-10">
      <h2 class="text-xl font-semibold mb-4">Submitted Features</h2>
      <div class="border-l-2 border-gray-300 pl-4 space-y-6">
        <% if (features && features.length > 0) { %>
          <% features.forEach(feature => { %>
            <div class="relative">
              <div class="absolute w-3 h-3 bg-blue-500 rounded-full -left-5.5 top-1.5 border-gray-300 border-2"></div>
              <p class="font-medium"><%= feature.title %></p>
              <p class="text-sm text-gray-500 mb-1"><%= feature.description %></p>
              <p class="text-xs text-gray-400">Submitted by <%= feature.requestedBy.name %> on <%= new Date(feature.createdAt).toLocaleDateString() %></p>
            </div>
          <% }) %>
        <% } else { %>
          <p class="text-sm text-gray-500">No features submitted yet.</p>
        <% } %>
      </div>
    </section>

    <!-- Submit New Feature -->
    <section>
      <h2 class="text-xl font-semibold mb-4">Suggest a New Feature</h2>
      <% if (user) { %>
        <form action="/featureRequests" method="POST" class="space-y-4">
          <div>
            <label class="block font-medium">Feature Title</label>
            <input name="title" required class="w-full px-3 py-2 border border-gray-200 rounded text-gray-700">
          </div>
          <div>
            <label class="block font-medium">Description</label>
            <textarea name="description" required rows="4" class="w-full px-3 py-2 border border-gray-200 rounded text-gray-700"></textarea>
          </div>
          <div>
            <button type="submit" class="bg-blue-600 text-white px-5 py-2 rounded hover:bg-blue-700 text-sm">Submit</button>
          </div>
        </form>
      <% } else { %>
        <p class="text-sm text-red-500">You must have an account to submit a feature. <button id="openAuthModalBtnInline" class="text-blue-600 underline">Register / Login</button></p>
      <% } %>
    </section>
  </main>

  <!-- Optional Auth Modal (included once globally) -->
  <%- include('partials/authModal') %>

  <script type="module" src="/js/features.js"></script>
  <script type="module" src="/js/dropdown.js"></script>
</body>
</html>